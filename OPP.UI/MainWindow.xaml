<Window x:Class="OPP.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPP.UI"
        xmlns:view="clr-namespace:OPP.UI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <view:NavigationView Grid.Column="0" DataContext="{Binding NavigationViewModel}"/>
        <view:ProizvodjacView Grid.Column="1" DataContext="{Binding ProizvodjacViewModel}"/>
    </Grid>
</Window>
